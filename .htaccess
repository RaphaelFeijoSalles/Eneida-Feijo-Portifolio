RewriteEngine On

# 1. Forçar HTTPS (Segurança)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 2. Redirecionamento do link antigo "proximo-evento.html" para a pasta nova
# Isso garante que se alguém tiver o link antigo, cai na página nova
RewriteRule ^proximo-evento\.html$ /tardedeimersao2/ [R=301,L]

# 3. Cache de imagens (Opcional, mas bom para performance)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
</IfModule>